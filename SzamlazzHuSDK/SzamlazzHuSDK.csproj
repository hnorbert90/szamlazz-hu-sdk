<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <PackageId>szamlazz-hu-sdk-CloudScape</PackageId>
    <Version>1.6.4.2</Version>
    <Authors>Gabor Angyal,Fiatal Tibor</Authors>
    <Description>SDK for the Sz치ml치zz.hu billing software</Description>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageIcon>logo.png</PackageIcon>
    <Copyright>Copyright 2020 Gabor Angyal</Copyright>
    <RepositoryUrl>https://github.com/agabor/szamlazz-hu-sdk.git</RepositoryUrl>
    <RepositoryType>git</RepositoryType> 
    <PackageProjectUrl>https://github.com/agabor/szamlazz-hu-sdk</PackageProjectUrl>
    <PackageTags>Billing;Sz치ml치zz.hu</PackageTags>
    <PackageReadmeFile>README.md</PackageReadmeFile>
  </PropertyGroup>
  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="NewtonSoft.JSON" Version="13.0.3" />
    <PackageReference Include="Scriban" Version="5.9.0" />
  </ItemGroup>
  <ItemGroup>
    <None Include="logo.png" Pack="true" PackagePath="" />
    <None Include="README.md" Pack="true" PackagePath="" />
  </ItemGroup>
  <ItemGroup>
    <Content Include="*.sbn">
        <Pack>true</Pack>
        <PackageFlatten>true</PackageFlatten>
        <PackagePath>contentFiles\any\any</PackagePath>
        <IncludeInPackage>true</IncludeInPackage>
        <PackageCopyToOutput>true</PackageCopyToOutput>
        <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>
</Project>
